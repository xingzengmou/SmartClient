<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5.0dip"
        android:layout_marginTop="1.0dip"
        android:gravity="center"
        android:textSize="@dimen/btn_text_size"
        android:text="@string/main_left_air"
        android:textColor="@android:color/white" />

    <LinearLayout
        android:id="@+id/layout_one"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1.0"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="5.0dip"
            android:layout_marginRight="5.0dip"
            android:layout_weight="4.0"
            android:gravity="center_vertical"
            android:textSize="@dimen/air_tv_size"
            android:text="@string/air_control"
            android:textColor="@android:color/white" />

        <TextView
            android:id="@+id/ac_list"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="5.0dip"
            android:layout_marginRight="5.0dip"
            android:layout_weight="3.0"
            android:background="@drawable/spiner"
            android:textSize="@dimen/btn_text_size"
            android:drawableRight="@drawable/btn_spinner"
            android:textColor="@android:color/black" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="10.0dip"
            android:layout_weight="3.0"
            android:orientation="horizontal"
            android:visibility="gone" >

            <TextView
                android:id="@+id/btn_air_pre"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="2.0dip"
                android:layout_marginRight="2.0dip"
                android:layout_weight="1.0"
                android:background="@drawable/btn_pre" />

            <TextView
                android:id="@+id/btn_air_next"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="2.0dip"
                android:layout_marginRight="2.0dip"
                android:layout_weight="1.0"
                android:background="@drawable/btn_next" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1.0" >

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="5.0dip"
            android:layout_marginRight="5.0dip"
            android:layout_weight="2.0"
            android:gravity="center_vertical"
            android:text="@string/air_wind_speed"
            android:textSize="@dimen/air_tv_size"
            android:textColor="@android:color/white" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1.0"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/txt_auto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="5.0dip"
                android:layout_marginRight="5.0dip"
                android:gravity="center"
                android:text="@string/air_auto"
                android:textSize="@dimen/air_tv_size"
                android:textColor="@android:color/white" />

            <TextView
                android:id="@+id/air_icon_one"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="5.0dip"
                android:layout_marginRight="5.0dip"
                android:textSize="@dimen/air_tv_size"
                android:background="@drawable/speed" />

            <TextView
                android:id="@+id/air_icon_two"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="5.0dip"
                android:layout_marginRight="5.0dip"
                android:textSize="@dimen/air_tv_size"
                android:background="@drawable/speed" />

            <TextView
                android:id="@+id/air_icon_three"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="5.0dip"
                android:layout_marginRight="5.0dip"
                android:background="@drawable/speed" />
        </LinearLayout>

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="5.0dip"
            android:layout_marginRight="5.0dip"
            android:layout_weight="2.0"
            android:gravity="center"
            android:textSize="@dimen/air_tv_size"
            android:textColor="@android:color/white" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="3.0"
        android:baselineAligned="false"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_gravity="center_vertical"
            android:layout_weight="3.0"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_marginLeft="5.0dip"
                android:layout_weight="1.0"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="2.0"
                    android:gravity="center"
                    android:text="@string/air_in_door"
                    android:textSize="@dimen/air_tv_size"
                    android:textColor="@android:color/white" />

                <TextView
                    android:id="@+id/txt_in_door_t"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="2.0"
                    android:gravity="center"
                    android:textSize="@dimen/air_tv_size"
                    android:textColor="@android:color/white" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_marginLeft="5.0dip"
                android:layout_weight="1.0"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="2.0"
                    android:gravity="center"
                    android:text="@string/air_out_door"
                    android:textSize="@dimen/air_tv_size"
                    android:textColor="@android:color/white" />

                <TextView
                    android:id="@+id/txt_out_door_t"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="2.0"
                    android:gravity="center"
                    android:textSize="@dimen/air_tv_size"
                    android:textColor="@android:color/white" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_marginLeft="5.0dip"
                android:layout_weight="1.0"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1.0"
                    android:gravity="center"
                    android:text="@string/air_mode"
                    android:textSize="@dimen/air_tv_size"
                    android:textColor="@android:color/white" />

                <TextView
                    android:id="@+id/txt_mode"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1.0"
                    android:gravity="center"
                    android:textSize="@dimen/air_tv_size"
                    android:textColor="@android:color/white" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_gravity="center_vertical"
            android:layout_weight="2.0"
            android:baselineAligned="false"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_gravity="center_vertical"
                android:layout_weight="1.0"
                android:baselineAligned="false"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="5.0dip"
                    android:layout_marginRight="5.0dip"
                    android:layout_weight="1.0"
                    android:textSize="@dimen/air_tv_size"
                    android:gravity="center_vertical"
                    android:text="@string/air_setting"
                    android:textColor="@android:color/white" />

                <EditText
                    android:id="@+id/txt_current_t"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="5.0dip"
                    android:layout_marginRight="5.0dip"
                    android:layout_weight="1.0"
                    android:background="@drawable/edt_bg"
                    android:gravity="center"
                    android:inputType="numberDecimal"
                    android:text="24.5"
                    android:enabled="false"
                    android:textColor="@android:color/white"
                    android:textSize="28.0sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="5.0dip"
                    android:layout_marginRight="5.0dip"
                    android:layout_weight="1.0"
                    android:gravity="center"
                    android:text="@string/air_weather_units"
                    android:textColor="@android:color/white"
                    android:textSize="28.0sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_gravity="center_vertical"
                android:layout_marginBottom="5.0dip"
                android:layout_weight="3.0"
                android:orientation="horizontal"
                android:visibility="gone">

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="5.0dip"
                    android:layout_marginRight="5.0dip"
                    android:layout_weight="1.0"
                    android:gravity="center_vertical"
                    android:text="@string/air_timing"
                    android:textColor="@android:color/white" />

                <TextView
                    android:id="@+id/txt_time"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1.0"
                    android:gravity="center"
                    android:text="03:00:00"
                    android:textColor="@android:color/white" />

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1.0"
                    android:gravity="center_vertical"
                    android:text="@string/air_hour_units"
                    android:textColor="@android:color/white" />

                <ImageView
                    android:id="@+id/btn_time"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="5.0dip"
                    android:layout_marginRight="5.0dip"
                    android:layout_weight="1.0"
                    android:src="@drawable/time" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1.0" >

        <TextView
            android:id="@+id/btn_on_off"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="1.0dip"
            android:layout_marginRight="1.0dip"
            android:layout_weight="1.0"
            android:background="@drawable/btn_air_on_off"
            android:gravity="center"
            android:textSize="@dimen/btn_text_size"
            android:text="@string/air_btn_on_off"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/btn_wind_speed"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="1.0dip"
            android:layout_marginRight="1.0dip"
            android:layout_weight="1.0"
            android:background="@drawable/btn_air"
            android:gravity="center"
            android:textSize="@dimen/btn_text_size"
            android:text="@string/air_btn_wind_speed"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/btn_mode"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="1.0dip"
            android:layout_marginRight="1.0dip"
            android:layout_weight="1.0"
            android:background="@drawable/btn_air"
            android:gravity="center"
            android:textSize="@dimen/btn_text_size"
            android:text="@string/air_btn_mode"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/btn_add_t"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="1.0dip"
            android:layout_marginRight="1.0dip"
            android:layout_weight="1.0"
            android:background="@drawable/btn_t_add"
            android:gravity="center"
            android:textSize="@dimen/btn_text_size"
            android:text="@string/air_btn_temperature_add"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/btn_minus_t"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="1.0dip"
            android:layout_marginRight="1.0dip"
            android:layout_weight="1.0"
            android:background="@drawable/btn_t_minus"
            android:gravity="center"
            android:textSize="@dimen/btn_text_size"
            android:text="@string/air_btn_temperature_minus"
            android:textColor="@android:color/black" />
    </LinearLayout>

</LinearLayout>